pipeline {
    agent any
    def mavenHome = tool name: "maven", type: "maven"   /**it will try to get the maven path of where maven installed **/
    def mavenCMD="${mavenHome}/bin/mvn "
    stages {
        stage ("git") {
            steps {
                git 'https://github.com/Mouni-ops/maven-hello-world.git'
            }
        }
        stage ("builld") {
            steps {
		
        	sh "${mavenCMD} clean package"
                
            }
        }
        stage ("deploy-warfile") {
            steps {
                sshagent(['Tomcat_user']) {
                    //sh "scp -o StrictHostKeyChecking=no webapp/target/webapp.jar ec2-user@34.222.132.246:/opt/apache-tomcat-8.5.63/webapps"
                    sh "scp -o StrictHostKeyChecking=no /target/*.jar ec2-user@172.31.37.38:/opt/apache-tomcat-8.5.69/webapps" 
    
                }
            }
        }
        
    }
}
